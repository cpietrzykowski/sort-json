{
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "generators": true
    },
    "sourceType": "module"
  },
  "plugins": [],
  "rules": {
    "indent": [
      "error",
      2, {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "error"
    ],
    "quotes": [
      "error",
      "single", {
        "allowTemplateLiterals": true
      }
    ],
    "semi": [
      "error"
    ],
    "require-jsdoc": [
      "error", {
        "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": true,
          "ClassDeclaration": true
        }
      }
    ],
    "no-unused-vars": [
      "error", {
        "args": "none"
      }
    ],
    "no-console": "off",
    "no-var": "error"
  }
}
